<!-- source/flats/show.html.erb -->

<!-- Read from data.flats with owner's name as key -->
<% flat = data.flats[owner] %>

<!-- Inject flat data in template -->
<div class="flat-banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('<%= image_path flat.picture %>'); height: 50vh; background-position: center">
</div>

<div class="flat-owner">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-6">
        <div class="flat-details">
          <div class="flat-owner-details">
            <%= image_tag flat.owner_picture, class: "img-circle", height: "100px" %>
            <p><%= flat.owner_name %></p>
          </div>
          <div class="header-flat-name">
            <p><%= flat.summary %></p>
            <br>
            <p><%= flat.city %></p>
          </div>
        </div>
      </div>
      <div class="col-xs-12 col-sm-4">
        <div class="form-container">
          <div class="row">
            <div class="form-login">
              <div class="text-center">
                <h3>Rent this room</h3>
              </div>
              <div class="col-xs-6">
                <div class="form-group">
                  <input class="form-control" type="email" placeholder="check in" id="example-text-input">
                </div>
              </div>
            </div>

            <div class="col-xs-6">
              <div class="form-group">
                <input class="form-control" type="password" placeholder="checkout" id="example-search-input">
              </div>
            </div>
          </div>
          <div class="form-group">
            <div class="dropdown">
            <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true" style = 'width: 100%'>
                1 person
                <span class="caret"></span>
              </button>
              <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
                <li><a href="#">2 persons</a></li>
                <li><a href="#">3 persons</a></li>
                <li><a href="#">4+ persons</a></li>
              </ul>
            </div>
          </div>
          <div class="form-group">
            <button type="button" class="btn btn-danger" style = 'width: 100%'>Search</button>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>
</div>
</div>
</div>

<div class="description">
  <h5>About this flat</h5>
  <p><%= flat.description %></p>
  <div class="flat-space">
    <p>
      <div class="details">
        <div class="container">
          <div class="row"></div>
          <div class="col-xs-12 col-sm-4">
            The space
          </div>
          <div class="col-xs-12 col-sm-4">
            <ul>
              <li>Accomodates: <%= flat.accomodates%> </li>
              <li>Bathrooms: <%= flat.bathrooms%> </li>
              <li>Bed type: <%= flat.bed%> </li>
              <li>Real Bed Bedrooms: <%= flat.real%> </li>
            </ul>
          </div>
          <div class="col-xs-12 col-sm-4">
            <ul>
              <li>Beds: <%= flat.beds%> </li>
              <li>Property type: <%= flat.property%> </li>
              <li>Room type: <%= flat.room%> </li>
            </ul>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>
